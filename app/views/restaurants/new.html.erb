<%= form_for @restaurant do |f| %>
<%=  f.label :name %>
<%=  f.text_field :name %>
<%=  f.label :address %>
<%=  f.text_field :address %>
<%=  f.label :phone_number %>
<%=  f.telephone_field :phone_number %>
<%=  f.label :category %>
<%=  f.select :category, collection: Restaurant::CATEGORIES %>
<%= f.submit %>
<% end %>

<%= link_to "Back to All the Restaurants", restaurants_path %>
